generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:mypass@localhost:3306/vehicle-db"
}

model Veiculo {
  id          Int           @id @default(autoincrement())
  placa       String        @default("") @db.VarChar(7)
  rastrado    Boolean       @default(false)
  comprimento Float         @default(00.00)
  largura     Float         @default(00.00)
  altura      Float         @default(00.00)
  cubagem     Float         @default(0000.00)
  created_at  DateTime
  FotoVeiculo FotoVeiculo[]

  @@map("veiculo")
}

model FotoVeiculo {
  id Int @id @default(autoincrement())

  file       Bytes
  created_at DateTime

  Veiculo   Veiculo? @relation(fields: [veiculoId], references: [id])
  veiculoId Int?

  @@map("fotoVeiculo")
}
